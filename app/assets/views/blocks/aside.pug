section.card
  .card__title 🗓 Upcoming events

  .card__body
    each event in events
      article.aside-story.aside-story--events
        .aside-story__body
          a.aside-story__link(href="#!")= event

          .aside-story__info
            time.humble.humble--tiny Oct 31, 2018
            .humble.humble--tiny Las Vegas, USA

  .card__footer
    a.btn.btn--arrow-right(href="#!") See all

