header.header
  .header__container
    a.header__logo(href="#!")
      img.header__logo-img(src="img/icons/logo.svg" alt="Logo")
      | Logo

    .header__mobile
      button.btn.btn--light.btn--cross-white.header__mobile-cross

    //
      .social.header__social
        a.social__link.social__link--fb-white(href="#!")
        a.social__link.social__link--tw-white(href="#!")
        a.social__link.social__link--yt-white(href="#!")
        a.social__link.social__link--tg-white(href="#!")

    nav.header__nav
      ul.header__nav-list
        each category, i in nav
          li.header__nav-item(class=[ category.childs ? 'header__nav-item--arrow' : '' ] class=[ i == 1 ? 'header__nav-item--active' : '' ])
            a.header__nav-link(href="/" + i)= category.name

            if category.childs
              ul.header__nav-child-list
                each child, i in category.childs
                  li.header__nav-child-item(class=[ i == 1 ? 'header__nav-child-item--active' : '' ])
                    a.header__nav-child-link(href="#!c" + i)= child.name

    .header__panel
      button.header__btn-search.btn.btn--light.btn--search(aria-label="open search") Search
      button.header__burger.btn.btn--light.btn--burger(aria-label="open menu")

    .mobile-menu-back Back

    .header__search
      form.header__search-form(action="#" method="get")
        button.header__search-submit.btn.btn--light.btn--search(type="submit")
        input.input__elem.header__search-input(type="text" name="search" placeholder="Type to search")
        button.header__search-close.btn.btn--light.btn--cross

.mobile-menu-cover
